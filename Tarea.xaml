<Window x:Class="App1.Tarea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App1"
        mc:Ignorable="d"
        Title="Tarea" Height="450" Width="337">
    <Grid>
        <Label Content="Tarea" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Brush Script MT"/>
        <Label Content="Crear Tarea" HorizontalAlignment="Center" Margin="0,119,0,0" VerticalAlignment="Top"/>
        <Label Content="Modificar Tarea" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BotonCrearTarea" Content="Entrar" HorizontalAlignment="Left" Margin="155,163,0,0" VerticalAlignment="Top" FontSize="10" Click="BotonCrearTarea_Click"/>
        <Label Content="Haga click en el botón para ingresar a la opción." HorizontalAlignment="Left" Margin="59,54,0,0" VerticalAlignment="Top" FontSize="10"/>
        <Button x:Name="BotonModificarTarea" Content="Entrar" HorizontalAlignment="Center" Margin="0,262,0,0" VerticalAlignment="Top" FontSize="10" Click="BotonModificarTarea_Click"/>

    </Grid>
</Window>
